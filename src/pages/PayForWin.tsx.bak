import React, { useEffect, useState } from 'react';
import { useParams, Link, useNavigate } from 'react-router-dom';
import { supabase } from '../config/supabaseClient';
import { AlertCircle, Loader2, Trophy, ArrowRight, User, CheckCircle } from 'lucide-react';
import { toast } from 'react-hot-toast';

interface PayAuction {
  id: string;
  status: string | null;
  auction_type: 'live' | 'timed' | 'tender' | string | null;
  winner_id: string | null;
  final_price: number | null;
  created_at: string | null;
  product?: {
    id: string;
    title: string;
    image_url?: string | null;
  } | null;
  seller?: {
    id: string;
    full_name?: string | null;
  } | null;
}

const PayForWin: React.FC = () => {
  const { auctionId } = useParams();
  const navigate = useNavigate();
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [auction, setAuction] = useState<PayAuction | null>(null);
  const [isWinner, setIsWinner] = useState<boolean | null>(null);
  const [submitting, setSubmitting] = useState(false);
  const [alreadyPaid, setAlreadyPaid] = useState(false);

  const [method, setMethod] = useState<'cash' | 'cheque' | 'online_gateway' | 'loan' | 'nft'>('cash');
  const [amountInput, setAmountInput] = useState<string>('');
  const [referenceNumber, setReferenceNumber] = useState('');
  const [proofUrl, setProofUrl] = useState('');
  const [notes, setNotes] = useState('');

  const [branchLocation, setBranchLocation] = useState('');
  const [bankName, setBankName] = useState('');
  const [loanProvider, setLoanProvider] = useState('');
  const [loanApplicationId, setLoanApplicationId] = useState('');
  const [walletAddress, setWalletAddress] = useState('');
  const [txHash, setTxHash] = useState('');

  useEffect(() => {
    const loadData = async () => {
      if (!auctionId) {
        setError('Missing auction reference.');
        setLoading(false);
        return;
      }

      try {
        const [authRes, auctionRes] = (await Promise.all([
          supabase.auth.getUser(),
          supabase
            .from('auctions')
            .select(
              `id, status, auction_type, winner_id, final_price, created_at,
               product:products(id, title, image_url),
               seller:profiles(id, full_name)`
            )
            .eq('id', auctionId),
        ])) as any;
        const auth = authRes?.data;
        let data = auctionRes?.data;
        const auctionError = auctionRes?.error || null;
        if (Array.isArray(data)) {
          data = data[0] || null;
        }

        const user = auth?.user || null;

        if (auctionError) {
          console.error('PayForWin: error loading auction', auctionError);
          setError('We could not find this auction.');
          setLoading(false);
          return;
        }

        if (!data) {
          setError('We could not find this auction.');
          setLoading(false);
          return;
        }

        setAuction(data as PayAuction);

        if (!user) {
          setIsWinner(null);
        } else {
          setIsWinner(data.winner_id === user.id);
        }
      } catch (e) {
        console.error('PayForWin: unexpected error loading data', e);
        setError('Something went wrong while loading payment details.');
      } finally {
        setLoading(false);
      }
    };

    loadData();
  }, [auctionId]);
  useEffect(() => {
    const checkSettlement = async () => {
      if (!auctionId) return;
      try {
        const { data: { user } } = await supabase.auth.getUser();
        const [{ data: s }, { data: wp }] = await Promise.all([
          supabase
            .from('settlements')
            .select('id,status')
            .eq('auction_id', auctionId)
            .limit(1)
            .maybeSingle(),
          supabase
            .from('win_payments')
            .select('status')
            .eq('auction_id', auctionId)
            .eq('buyer_id', user?.id || '')
            .limit(1)
            .maybeSingle(),
        ]);

        // Prefer buyer’s win_payments status; fallback to settlements if missing
        const buyerPaid = wp?.status && ['approved', 'completed', 'paid'].includes(wp.status.toLowerCase());
        const sellerPaid = s?.status && ['escrow_funded', 'completed', 'paid'].includes(s.status.toLowerCase());
        setAlreadyPaid(buyerPaid || sellerPaid || false);
      } catch {
        setAlreadyPaid(false);
      }
    };
    checkSettlement();
  }, [auctionId])};

  const imageUrl =
    auction?.product?.image_url ||
    'https://images.unsplash.com/photo-1511919884226-fd3cad34687c?auto=format&fit=crop&w=600&q=80';
  const title = auction?.product?.title || 'Won auction';
  const amount = auction?.final_price != null ? Number(auction.final_price) : 0;

  const typeLabel = (() => {
    const t = auction?.auction_type || '';
    if (t === 'live') return 'Live Auction';
    if (t === 'timed') return 'Timed Auction';
    if (t === 'tender') return 'Tender Auction';
    return 'Auction';
  })();

  const statusLower = (auction?.status || '').toLowerCase();
  const isPaymentPending = statusLower === 'payment_pending';

  const effectiveAmount = (() => {
    const base = auction?.final_price != null ? Number(auction.final_price) : 0;
    const manual = amountInput ? Number(amountInput) : NaN;
    if (!Number.isNaN(manual) && manual > 0) return manual;
    return base;
  })();

  if (loading) {
    return (
      <div className="w-full relative min-h-screen bg-gray-50 dark:bg-gray-900">
        <div className="sticky top-16 z-30 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-800 shadow-sm transition-all duration-200">
          <div className="container mx-auto px-4 py-4">
            <div className="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4">
              <div>
                <h1 className="text-2xl font-bold text-gray-900 dark:text-white tracking-tight">Pay for Your Win</h1>
                <p className="text-sm text-gray-500 dark:text-gray-400 font-medium">Loading payment details…</p>
              </div>
            </div>
          </div>
        </div>
        <div className="flex justify-center items-center min-h-[60vh]">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600"></div>
        </div>
      </div>
    );
  }

  const handleSubmitPayment = async (event: React.FormEvent) => {
    event.preventDefault();

    if (!auctionId) {
      toast.error('Missing auction reference.');
      return;
    }

    if (!isWinner) {
      toast.error('Only the winning buyer can submit payment for this auction.');
      return;
    }

    const amountToSend = effectiveAmount;
    if (!amountToSend || Number.isNaN(amountToSend) || amountToSend <= 0) {
      toast.error('Payment amount is not valid.');
      return;
    }

    try {
      setSubmitting(true);
      const { data, error: sessionError } = await supabase.auth.getSession();
      if (sessionError) {
        console.error('PayForWin: error getting session', sessionError);
      }

      const user = data.session?.user;
      const accessToken = data.session?.access_token;
      
      if (!accessToken || !user) {
        toast.error('You must be logged in to submit payment.');
        setSubmitting(false);
        return;
      }

      if (method === 'online_gateway') {
        try {
          // Dynamically load Razorpay SDK
          const script = document.createElement('script');
          script.src = 'https://checkout.razorpay.com/v1/checkout.js';
          script.async = true;
          document.body.appendChild(script);

          const ok = await new Promise<boolean>((resolve) => {
            script.onload = () => resolve(true);
            script.onerror = () => resolve(false);
          });
          if (!ok) {
            toast.error('Failed to load payment gateway. Please check your connection.');
            setSubmitting(false);
            return;
          }
  
          // Create order via Netlify function
          // We use the same create-order endpoint as deposits, but with type='settlement'
          const res = await fetch('/api/razorpay-create-order', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ 
              amount: amountToSend * 100, // paise
              notes: { 
                type: 'settlement', 
                user_id: user.id, 
                auction_id: auctionId, 
                product_id: auction?.product?.id 
              } 
            })
          });
          
          const { order, key_id, error } = await res.json();
          if (error) throw new Error(error);
  
          const options = {
            key: key_id,
            amount: order.amount,
            currency: order.currency,
            name: 'QuickBid',
            description: `Settlement for ${auction?.product?.title || 'Auction Win'}`,
            order_id: order.id,
            prefill: {
              email: user.email,
              contact: user.phone
            },
            notes: { 
              type: 'settlement', 
              user_id: user.id, 
              auction_id: auctionId 
            },
            handler: async (response: any) => {
              // On success, record the payment
              try {
                const recordRes = await fetch(`/api/wins/${auctionId}/payments`, {
                  method: 'POST',
                  headers: {
                    'Content-Type': 'application/json',
                    Authorization: `Bearer ${accessToken}`,
                  },
                  body: JSON.stringify({
                    method: 'online_gateway',
                    amount: amountToSend,
                    reference_number: response.razorpay_payment_id,
                    order_id: response.razorpay_order_id,
                    signature: response.razorpay_signature,
                    notes: `Razorpay Order: ${response.razorpay_order_id}`
                  }),
                });
  
                if (!recordRes.ok) {
                  const body = await recordRes.json().catch(() => ({}));
                  console.error('PayForWin: payment record failed', body);
                  toast.error('Payment succeeded but recording failed. Please contact support.');
                } else {
                  toast.success('Payment successful!');
                  navigate('/my/won-auctions');
                }
              } catch (e) {
                console.error(e);
                toast.error('Payment succeeded but recording failed. Please contact support.');
              }
            },
            modal: {
              ondismiss: () => {
                setSubmitting(false);
                toast('Payment cancelled');
              }
            }
          };
  
          const rzp = new window.Razorpay(options);
          rzp.on('payment.failed', function (response: any){
             toast.error(response.error.description || 'Payment failed');
             setSubmitting(false);
          });
          rzp.open();
          
          return;
  
        } catch (e: any) {
          console.error('PayForWin: online payment setup failed', e);
          toast.error(e.message || 'Failed to initialize payment.');
          setSubmitting(false);
          return;
        }
      }

      // Handle other methods
      let finalReference = referenceNumber || null;
      const extraNotes: string[] = [];

      if (method === 'cash') {
        if (branchLocation) extraNotes.push(`Cash branch/location: ${branchLocation}`);
      }

      if (method === 'cheque') {
        if (!finalReference && txHash === '') {
          // Use cheque number as reference
          finalReference = referenceNumber || null;
        }
        if (bankName) extraNotes.push(`Bank: ${bankName}`);
      }

      if (method === 'loan') {
        if (loanApplicationId && !finalReference) {
          finalReference = loanApplicationId;
        }
        if (loanProvider) extraNotes.push(`Loan provider: ${loanProvider}`);
      }

      if (method === 'nft') {
        if (txHash && !finalReference) {
          finalReference = txHash;
        }
        if (walletAddress) extraNotes.push(`Wallet: ${walletAddress}`);
      }

      const combinedNotes = [notes, ...extraNotes].filter(Boolean).join(' | ');

      const response = await fetch(`/api/wins/${auctionId}/payments`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          Authorization: `Bearer ${accessToken}`,
        },
        body: JSON.stringify({
          method,
          amount: amountToSend,
          reference_number: finalReference,
          screenshot_url: proofUrl || null,
          notes: combinedNotes || null,
        }),
      });

      if (!response.ok) {
        const body = await response.json().catch(() => ({}));
        console.error('PayForWin: payment submit failed', body);
        toast.error(body.error || 'Failed to submit payment.');
        setSubmitting(false);
        return;
      }

      toast.success('Payment submitted, pending Accounts verification.');
      navigate('/my/won-auctions');
    } catch (e) {
      console.error('PayForWin: unexpected error submitting payment', e);
      toast.error('Something went wrong while submitting payment.');
    } finally {
      setSubmitting(false);
    }
  };

  if (alreadyPaid) {
    return (
      <div className="max-w-xl mx-auto px-4 py-12 text-center">
        <CheckCircle className="h-10 w-10 text-green-500 mx-auto mb-3" />
        <h1 className="text-2xl font-semibold text-gray-900 dark:text-white mb-2">Payment already recorded</h1>
        <p className="text-gray-600 dark:text-gray-300 mb-4">Our records show this win has been paid. You can view your invoice or return to wins.</p>
        <div className="flex items-center justify-center gap-3">
          <Link
            to={auction?.id ? `/invoice/${auction.id}` : '/my/won-auctions'}
            className="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-indigo-600 text-white text-sm hover:bg-indigo-700"
          >
            View Invoice
          </Link>
          <Link
            to="/my/won-auctions"
            className="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-200 text-gray-900 text-sm hover:bg-gray-300 dark:bg-gray-700 dark:text-white dark:hover:bg-gray-600"
          >
            Back to My Wins
          </Link>
        </div>
      </div>
    );
  }

  return (
    <div className="max-w-3xl mx-auto px-4 py-8">
      <div className="mb-6">
        <h1 className="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-1">Pay for your win</h1>
        <p className="text-sm text-gray-600 dark:text-gray-300">
          Review your winning auction and then proceed to payment. This page is a payment summary stub; the final gateway
          integration will be wired here.
        </p>
      </div>

      {loading && (
        <div className="mb-6 text-center text-gray-500 flex items-center justify-center gap-2">
          <Loader2 className="h-5 w-5 animate-spin text-indigo-600" />
          <span className="text-sm">Loading payment details…</span>
        </div>
      )}

      {showError && (
        <div className="mb-6 max-w-xl mx-auto px-4 py-4 text-center border rounded-lg bg-red-50 dark:bg-red-900/20">
          <h1 className="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-2">Payment not available</h1>
          <AlertCircle className="h-5 w-5 text-red-500 mx-auto mb-2" />
          <p className="text-sm text-red-700 dark:text-red-200">Payment details for this auction are not available.</p>
          <Link
            to="/my/won-auctions"
            className="mt-2 inline-flex items-center gap-2 px-3 py-1.5 rounded-lg bg-indigo-600 text-white text-xs hover:bg-indigo-700"
          >
            Back to My Won Auctions
            <ArrowRight className="h-3 w-3" />
          </Link>
        </div>
      )}

      <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-4 md:p-6 mb-6 flex flex-col sm:flex-row gap-4">
        <div className="flex-shrink-0">
          <img
            src={imageUrl}
            alt={title}
            className="w-28 h-28 rounded-lg object-cover"
          />
        </div>
        <div className="flex-1 flex flex-col justify-between">
          <div>
            <div className="flex items-center gap-2 mb-1 flex-wrap">
              <span className="inline-flex items-center gap-1 px-2 py-0.5 rounded-full bg-indigo-50 text-indigo-700 text-[11px] font-medium">
                <Trophy className="h-3 w-3" />
                Won
              </span>
              <span className="text-[11px] text-gray-500 dark:text-gray-400">{typeLabel}</span>
              {auction?.created_at && (
                <span className="text-[11px] text-gray-500 dark:text-gray-400">
                  Won on {new Date(auction.created_at).toLocaleDateString()}
                </span>
              )}
            </div>
            <h2 className="text-base md:text-lg font-semibold text-gray-900 dark:text-white line-clamp-2 mb-1">{title}</h2>
            {auction?.seller?.full_name && (
              <p className="text-xs text-gray-600 dark:text-gray-300 flex items-center gap-1">
                <User className="h-3 w-3" />
                Seller: <span className="font-medium">{auction.seller.full_name}</span>
              </p>
            )}
          </div>
        </div>
      </div>

      <div className="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
        <div className="bg-gray-50 dark:bg-gray-800 rounded-xl p-4">
          <h3 className="text-sm font-semibold text-gray-900 dark:text-white mb-2">Payment summary</h3>
          <p className="text-xs text-gray-600 dark:text-gray-300 mb-1">
            Winning bid amount:
          </p>
          <p className="text-xl font-bold text-gray-900 dark:text-white mb-2">₹{amount.toLocaleString()}</p>
          <p className="text-[11px] text-gray-500 dark:text-gray-400">
            Taxes, delivery, and any additional charges (if applicable) will be shown on the final payment page.
          </p>
        </div>
        <div className="bg-gray-50 dark:bg-gray-800 rounded-xl p-4">
          <h3 className="text-sm font-semibold text-gray-900 dark:textWhite mb-2">What happens next</h3>
          <ul className="text-xs text-gray-600 dark:text-gray-300 space-y-1 list-disc list-inside">
            <li>We will validate your win and any KYC / verification requirements.</li>
            <li>On the next step, you will choose a payment method and complete payment.</li>
            <li>After payment, you will receive delivery / pickup instructions on SMS and email.</li>
          </ul>
          <p className="mt-2 text-[11px] text-gray-500 dark:text-gray-400">
            Commission is paid by the seller from their payout, not added on top of your winning bid.
          </p>
        </div>
      </div>

      {isWinner === false && (
        <div className="mb-4 p-3 rounded-lg bg-red-50 dark:bg-red-900/20 text-xs text-red-700 dark:text-red-200 flex items-start gap-2">
          <AlertCircle className="h-4 w-4 mt-0.5" />
          <span>
            You are viewing a payment page for an auction where our records show a different winner. Payment will only be
            allowed for the actual winner.
          </span>
        </div>
      )}
      <form onSubmit={handleSubmitPayment} className="space-y-4">
        <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-4">
          <h3 className="text-sm font-semibold text-gray-900 dark:text-white mb-3">Choose payment method</h3>
          <div className="flex flex-wrap gap-2 mb-3 text-xs">
            <button
              type="button"
              onClick={() => setMethod('cash')}
              className={`px-3 py-1 rounded-full border ${
                method === 'cash' ? 'bg-indigo-600 text-white border-indigo-600' : 'bg-white dark:bg-gray-900 text-gray-700 dark:text-gray-200 border-gray-200 dark:border-gray-700'
              }`}
            >
              Cash (offline)
            </button>
            <button
              type="button"
              onClick={() => setMethod('cheque')}
              className={`px-3 py-1 rounded-full border ${
                method === 'cheque' ? 'bg-indigo-600 text-white border-indigo-600' : 'bg-white dark:bg-gray-900 text-gray-700 dark:text-gray-200 border-gray-200 dark:border-gray-700'
              }`}
            >
              Cheque
            </button>
            <button
              type="button"
              onClick={() => setMethod('online_gateway')}
              className={`px-3 py-1 rounded-full border ${
                method === 'online_gateway' ? 'bg-indigo-600 text-white border-indigo-600' : 'bg-white dark:bg-gray-900 text-gray-700 dark:text-gray-200 border-gray-200 dark:border-gray-700'
              }`}
            >
              Online payment
            </button>
            <button
              type="button"
              onClick={() => setMethod('loan')}
              className={`px-3 py-1 rounded-full border ${
                method === 'loan' ? 'bg-indigo-600 text-white border-indigo-600' : 'bg-white dark:bg-gray-900 text-gray-700 dark:text-gray-200 border-gray-200 dark:border-gray-700'
              }`}
            >
              Loan
            </button>
            <button
              type="button"
              onClick={() => setMethod('nft')}
              className={`px-3 py-1 rounded-full border ${
                method === 'nft' ? 'bg-indigo-600 text-white border-indigo-600' : 'bg-white dark:bg-gray-900 text-gray-700 dark:text-gray-200 border-gray-200 dark:border-gray-700'
              }`}
            >
              NFT / Crypto
            </button>
          </div>

          <div className="grid grid-cols-1 md:grid-cols-2 gap-4 text-xs">
            <div>
              <label className="block text-[11px] text-gray-500 dark:text-gray-400 mb-1">Amount to pay (₹)</label>
              <input
                type="number"
                className="w-full px-3 py-2 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 text-xs"
                value={amountInput}
                onChange={(e) => setAmountInput(e.target.value)}
                placeholder={auction?.final_price != null ? auction.final_price.toString() : 'Enter amount'}
              />
              <p className="mt-1 text-[11px] text-gray-500 dark:text-gray-400">
                If left blank, we will use your winning bid amount.
              </p>
            </div>

            {method === 'cash' && (
              <div>
                <label className="block text-[11px] text-gray-500 dark:text-gray-400 mb-1">Cash deposit branch / location</label>
                <input
                  type="text"
                  className="w-full px-3 py-2 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 text-xs"
                  value={branchLocation}
                  onChange={(e) => setBranchLocation(e.target.value)}
                  placeholder="e.g. Hyderabad branch, Main Road"
                />
              </div>
            )}

            {method === 'cheque' && (
              <>
                <div>
                  <label className="block text-[11px] text-gray-500 dark:text-gray-400 mb-1">Cheque number</label>
                  <input
                    type="text"
                    className="w-full px-3 py-2 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 text-xs"
                    value={referenceNumber}
                    onChange={(e) => setReferenceNumber(e.target.value)}
                    placeholder="Cheque no."
                  />
                </div>
                <div>
                  <label className="block text-[11px] text-gray-500 dark:text-gray-400 mb-1">Bank name</label>
                  <input
                    type="text"
                    className="w-full px-3 py-2 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 text-xs"
                    value={bankName}
                    onChange={(e) => setBankName(e.target.value)}
                    placeholder="e.g. HDFC Bank"
                  />
                </div>
              </>
            )}

            {method === 'online_gateway' && (
              <div className="md:col-span-2">
                <p className="text-[11px] text-gray-600 dark:text-gray-300">
                  Once the online gateway is configured, this option will redirect you to a secure payment page. For now,
                  you can share the payment reference / UPI transaction ID below and Accounts will verify it.
                </p>
              </div>
            )}

            {method === 'loan' && (
              <>
                <div>
                  <label className="block text-[11px] text-gray-500 dark:text-gray-400 mb-1">Loan provider</label>
                  <input
                    type="text"
                    className="w-full px-3 py-2 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 text-xs"
                    value={loanProvider}
                    onChange={(e) => setLoanProvider(e.target.value)}
                    placeholder="e.g. HDFC, ICICI, Bank partner"
                  />
                </div>
                <div>
                  <label className="block text-[11px] text-gray-500 dark:text-gray-400 mb-1">Loan application ID</label>
                  <input
                    type="text"
                    className="w-full px-3 py-2 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 text-xs"
                    value={loanApplicationId}
                    onChange={(e) => setLoanApplicationId(e.target.value)}
                    placeholder="Application / sanction ID"
                  />
                </div>
              </>
            )}

            {method === 'nft' && (
              <>
                <div>
                  <label className="block text-[11px] text-gray-500 dark:text-gray-400 mb-1">Wallet address</label>
                  <input
                    type="text"
                    className="w-full px-3 py-2 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 text-xs"
                    value={walletAddress}
                    onChange={(e) => setWalletAddress(e.target.value)}
                    placeholder="0x..."
                  />
                </div>
                <div>
                  <label className="block text-[11px] text-gray-500 dark:text-gray-400 mb-1">Transaction hash</label>
                  <input
                    type="text"
                    className="w-full px-3 py-2 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 text-xs"
                    value={txHash}
                    onChange={(e) => setTxHash(e.target.value)}
                    placeholder="0x..."
                  />
                </div>
              </>
            )}

            <div className="md:col-span-2">
              <label className="block text-[11px] text-gray-500 dark:text-gray-400 mb-1">Payment reference / UPI / txn id (optional)</label>
              <input
                type="text"
                className="w-full px-3 py-2 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 text-xs"
                value={referenceNumber}
                onChange={(e) => setReferenceNumber(e.target.value)}
                placeholder="Reference number if applicable"
              />
            </div>

            <div className="md:col-span-2">
              <label className="block text-[11px] text-gray-500 dark:text-gray-400 mb-1">Proof screenshot URL (optional)</label>
              <input
                type="text"
                className="w-full px-3 py-2 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 text-xs"
                value={proofUrl}
                onChange={(e) => setProofUrl(e.target.value)}
                placeholder="Paste a link to your screenshot or payment proof"
              />
            </div>

            <div className="md:col-span-2">
              <label className="block text-[11px] text-gray-500 dark:text-gray-400 mb-1">Notes for Accounts team (optional)</label>
              <textarea
                className="w-full px-3 py-2 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 text-xs"
                rows={3}
                value={notes}
                onChange={(e) => setNotes(e.target.value)}
                placeholder="Any extra details that help Accounts verify your payment"
              />
            </div>
          </div>

          <div className="mt-4 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
            <div className="text-[11px] text-gray-500 dark:text-gray-400 flex items-center gap-1">
              <CheckCircle className="h-3 w-3 text-green-500" />
              <span>
                Your payment will be marked as <span className="font-semibold">pending verification</span>. The Accounts team
                must approve it before the win is treated as fully paid.
              </span>
            </div>
            <button
              type="submit"
              disabled={submitting || !isWinner || !isPaymentPending}
              data-testid="pay-for-win-submit"
              className={`inline-flex items-center justify-center px-4 py-2 rounded-lg text-sm font-medium shadow-sm transition-colors
                ${!isWinner || !isPaymentPending
                  ? 'bg-gray-200 text-gray-500 cursor-not-allowed'
                  : 'bg-indigo-600 text-white hover:bg-indigo-700'
                }`}
            >
              {submitting ? 'Submitting…' : 'Submit payment for verification'}
            </button>
          </div>
        </div>
      </form>

      {auction && (
        <div className="mt-4 text-xs text-gray-500 dark:text-gray-400">
          <p>
            If you face any issues or need help with payment, please contact QuickMela support with your auction ID
            <span className="font-semibold"> {auction.id}</span>.
          </p>
        </div>
      )}
    </div>
  );
};

export default PayForWin;
