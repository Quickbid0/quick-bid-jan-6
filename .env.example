# üîê QUICKBID AUTHENTICATION MODE CONFIGURATION
# =============================================

# AUTH_MODE Configuration (NEW)
# Options: demo | real | hybrid
# demo: Only demo authentication available
# real: Only real authentication available  
# hybrid: Both demo and real authentication available (default)
REACT_APP_AUTH_MODE=hybrid

# Legacy Authentication Flags (Deprecated - use AUTH_MODE instead)
# VITE_ENABLE_REAL_AUTH=true
# VITE_ENABLE_DEMO_AUTH=true

# Backend Configuration
REACT_APP_BACKEND_URL=http://localhost:3000

# Development Configuration
REACT_APP_DEBUG_AUTH=false
REACT_APP_DEBUG_API=false

# Feature Flags
REACT_APP_ENABLE_AI_FEATURES=true
REACT_APP_ENABLE_MONITORING=true
REACT_APP_ENABLE_BUSINESS_SOLUTIONS=true

# Application Configuration
REACT_APP_APP_NAME=QuickBid
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Enterprise Auction Platform

# API Configuration
REACT_APP_API_TIMEOUT=10000
REACT_APP_API_RETRY_ATTEMPTS=3

# UI Configuration
REACT_APP_THEME=light
REACT_APP_LANGUAGE=en

# Monitoring Configuration
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# Security Configuration
REACT_APP_ENABLE_CSRF_PROTECTION=true
REACT_APP_SESSION_TIMEOUT=3600000

# Feature Toggles
REACT_APP_ENABLE_BETA_FEATURES=false
REACT_APP_ENABLE_EXPERIMENTAL_FEATURES=false
